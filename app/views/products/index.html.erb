<div class="w-full flex flex-col bg-green-600 pt-40">
  <div class="h-20 py-3 w-full md:w-3/4 mx-auto bg-gray-300 flex">
    <%= form_for "/products/search", html: { class: "w-full flex items-center"} do |form| %>
      <div class="flex flex-col justify-between h-full w-full mx-4">
        <%= form.label :name_of_mushroom %>
        <%= form.text_field :mushroom_name, placeholder: "Example: Turkey tail or Trimetes versicolor", class: "w-full outline-none ring-2 focus:ring-green-600 pl-1" %>
      </div>
      <div class="flex flex-col justify-between h-full w-full mx-4">
        <%= form.label :by_location %>
        <%= form.text_field :location, placeholder: "123 Main St, Bangor ME", class: "w-full outline-none ring-2 focus:ring-green-600 pl-1" %>
      </div>
      <div class="h-full w-full md:w-1/2 flex items-end">
        <%= form.submit "Search", class: "bg-transparent mx-auto px-6 py-2 border-b-2 border-green-600 text-gray-700" %>
      </div>
    <% end %>
  </div>
  <div class="h-screen w-full md:w-3/4 mx-auto bg-gray-100"
</div>
